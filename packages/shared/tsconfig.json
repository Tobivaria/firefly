            "ESNext"
        ],
        "paths": {
            "@components/*": ["./components/*"],
            "@lib/*": ["./lib/*"],
            "@routes/*": ["./routes/*"],
            "@shared/*": ["./*"]
        }
    },
    "include": [
        "./lib"
    ]
}
